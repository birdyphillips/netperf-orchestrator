# NetPerf Orchestrator Configuration Example
# Network Performance Testing Orchestration Tool
# Copy this file to config.yaml and edit values for your environment

# ByteBlower Configuration
byteblower:
  # Path to ByteBlower CLI executable
  cli_path: "/path/to/ByteBlower-CLT"
  # Directory containing .bbp flow files
  bb_flows_dir: "bb_flows"

# PacketStorm Configuration
packetstorm:
  # PacketStorm REST API URL
  url: "http://192.168.1.100/xgui/rest"
  # PacketStorm API credentials
  username: "automation"
  password: "password"
  # API request timeout in seconds
  timeout: 30

# iPerf3 Linux Client Configuration
iperf3_linux:
  client:
    # Linux client IP address
    host: "192.168.1.10"
    # SSH username for Linux client
    username: "user"
    # SSH password for Linux client
    password: "password"
  server:
    # Linux server IP address
    host: "192.168.1.20"
    # SSH username for Linux server
    username: "user"
    # SSH password for Linux server
    password: "password"
  # iPerf3 server ports for Linux (Classic, Prague, UDP Classic, UDP LL)
  ports: [9202, 9205, 9206, 9210]

# iPerf3 macOS Client Configuration (Apple QUIC/L4S)
iperf3_macos:
  client:
    # macOS client IP address
    host: "192.168.1.11"
    # SSH username for macOS client
    username: "user"
    # SSH password for macOS client
    password: "password"
  server:
    # macOS server IP address
    host: "192.168.1.21"
    # SSH username for macOS server
    username: "user"
    # SSH password for macOS server
    password: "password"
  # iPerf3 server ports for macOS (QUIC, QUIC L4S, UDP, UDP L4S)
  ports: [9201, 9207, 9209, 9211]

# SpeedTest Client Configuration
speedtest:
  linux:
    # Linux SpeedTest client IP
    host: "192.168.1.10"
    # SSH username
    username: "user"
    # SSH password
    password: "password"
    # MAC address
    mac: "aa:bb:cc:dd:ee:01"
    # IPv6 address
    ipv6: "2001:db8::1"
  macos:
    # macOS SpeedTest client IP
    host: "192.168.1.11"
    # SSH username
    username: "user"
    # SSH password
    password: "password"
    # MAC address
    mac: "aa:bb:cc:dd:ee:02"
    # IPv6 address
    ipv6: "2001:db8::2"
  nvidia:
    # Windows NVIDIA client IP
    host: "192.168.1.12"
    # SSH username (Windows)
    username: "Administrator"
    # SSH password (Windows)
    password: "password"
    # MAC address
    mac: "aa:bb:cc:dd:ee:03"
    # IPv6 address
    ipv6: "2001:db8::3"
  mac_mini:
    # Mac Mini client IP
    host: "192.168.1.13"
    # SSH username
    username: "user"
    # SSH password
    password: "password"
    # MAC address
    mac: "aa:bb:cc:dd:ee:04"
    # IPv6 address
    ipv6: "2001:db8::4"

# vCMTS Configuration
vcmts:
  # Cable modem MAC address
  cm_mac: "aa:bb:cc:dd:ee:ff"
  # vCMTS hostname
  host: "vcmts.example.com"

# SNMP Configuration
snmp:
  # Jump server for SNMP access
  jumpserver: "jumpserver.example.com"
  # SSH username for jump server
  username: "user"
  # SNMP community string
  community: "public"
  # SNMP timeout in seconds
  timeout: 5
  # SNMP retry count
  retries: 2

# CMTS TACACS Configuration
cmts:
  # TACACS password for CMTS authentication
  tacacs_password: "password"

# CMTS Hosts
cmts_hosts:
  - name: "vcmts01.example.com"
    type: "vcmts"
  - name: "icmts01.example.com"
    type: "icmts"

# SSH Configuration
ssh:
  # Path to SSH private key (supports ~ expansion)
  key_path: "~/.ssh/id_rsa"
  # SSH connection timeout in seconds
  connect_timeout: 20
  # SSH command execution timeout in seconds
  command_timeout: 30
